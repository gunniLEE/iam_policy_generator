{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "system managerallowfordevops",
            "Effect": "Allow",
            "Action": [
                "ssm:CancelCommand",
                "ssm:CreateDocument",
                "ssm:Add*",
                "ssm:Describe*",
                "ssm:Get*",
                "ssm:Label*",
                "ssm:List*",
                "ssm:Put*",
                "ssm:Resume*",
                "ssm:Send*",
                "ssm:Start*",
                "ssm:Stop*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "resource groupallowfordevops",
            "Effect": "Allow",
            "Action": [
                "resource-groups:Create*",
                "resource-groups:Get*",
                "resource-groups:Group*",
                "resource-groups:List*",
                "resource-groups:Put*",
                "resource-groups:Search*",
                "resource-groups:Tag*",
                "resource-groups:Update*"
            ],
            "Resource": "*"
        }
    ]
}