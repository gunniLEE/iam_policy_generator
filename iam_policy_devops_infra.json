{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ec2orvpcallowfordevops",
            "Effect": "Allow",
            "Action": [
                "ec2:AcceptReservedInstancesExchangeQuote",
                "ec2:AcceptVpcPeeringConnection",
                "ec2:AssociateAddress",
                "ec2:AssociateInstanceEventWindow",
                "ec2:AssociateDhcpOptions",
                "ec2:AssociateNatGatewayAddress",
                "ec2:AssociateRouteTable",
                "ec2:AssociateSubnetCidrBlock",
                "ec2:AssociateVpcCidrBlock",
                "ec2:CreateCapacityReservation",
                "ec2:CreateCapacityReservationFleet",
                "ec2:CreateFleet",
                "ec2:CreateFpgaImage",
                "ec2:CreateInstanceConnectEndpoint",
                "ec2:CreateInstanceEventWindow",
                "ec2:CreateKeyPair",
                "ec2:CreateLaunchTemplate",
                "ec2:CreateLaunchTemplateVersion",
                "ec2:CreatePlacementGroup",
                "ec2:CreateReservedInstancesListing",
                "ec2:CreateRestoreImageTask",
                "ec2:CreateSecurityGroup",
                "ec2:CreateSpotDatafeedSubscription",
                "ec2:CreateStoreImageTask",
                "ec2:CreateTags",
                "ec2:CreateDefaultSubnet",
                "ec2:CreateDefaultVpc",
                "ec2:CreateDhcpOptions",
                "ec2:CreateEgressOnlyInternetGateway",
                "ec2:CreateFlowLogs",
                "ec2:CreateInternetGateway",
                "ec2:CreateManagedPrefixList",
                "ec2:CreateNatGateway",
                "ec2:CreateNetworkAcl",
                "ec2:CreateNetworkAclEntry",
                "ec2:CreateNetworkInterface",
                "ec2:CreateNetworkInterfacePermission",
                "ec2:CreateRoute",
                "ec2:CreateRouteTable",
                "ec2:CreateSubnet",
                "ec2:CreateSubnetCidrReservation",
                "ec2:CreateTrafficMirrorFilter",
                "ec2:CreateTrafficMirrorFilterRule",
                "ec2:CreateTrafficMirrorSession",
                "ec2:CreateTrafficMirrorTarget",
                "ec2:CreateVpc",
                "ec2:CreateVpcPeeringConnection",
                "ec2:CreateVolume",
                "ec2:DeregisterInstanceEventNotificationAttributes",
                "ec2:EnableAddressTransfer",
                "ec2:EnableFastLaunch",
                "ec2:EnableImageBlockPublicAccess",
                "ec2:EnableImageDeprecation",
                "ec2:EnableSerialConsoleAccess",
                "ec2:ModifyFpgaImageAttribute",
                "ec2:ModifyInstanceEventWindow",
                "ec2:ModifyVolume",
                "ec2:ModifyVolumeAttribute",
                "ec2:RegisterInstanceEventNotificationAttributes",
                "ec2:ReplaceIamInstanceProfileAssociation",
                "ec2:ResetAddressAttribute",
                "ec2:ResetFpgaImageAttribute",
                "ec2:ResetImageAttribute",
                "ec2:ResetInstanceAttribute",
                "ec2:Advertise*",
                "ec2:Allocate*",
                "ec2:Assign*",
                "ec2:Attach*",
                "ec2:Bundle*",
                "ec2:Confirm*",
                "ec2:Copy*",
                "ec2:Deprovision*",
                "ec2:Describe*",
                "ec2:Disable*",
                "ec2:Get*",
                "ec2:Import*",
                "ec2:Monitor*",
                "ec2:Provision*",
                "ec2:Reject*",
                "ec2:Report*",
                "ec2:Request*",
                "ec2:Run*",
                "ec2:Start*",
                "ec2:Unmonitor*",
                "ec2:Update*",
                "ec2:Withdraw*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ecsallowfordevops",
            "Effect": "Allow",
            "Action": [
                "ecs:CreateCluster",
                "ecs:CreateService",
                "ecs:CreateTaskSet",
                "ecs:PutAttributes",
                "ecs:Describe*",
                "ecs:Discover*",
                "ecs:Get*",
                "ecs:List*",
                "ecs:Register*",
                "ecs:Run*",
                "ecs:Start*",
                "ecs:Submit*",
                "ecs:Tag*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "eksallowfordevops",
            "Effect": "Allow",
            "Action": [
                "eks:CreateAddon",
                "eks:CreateCluster",
                "eks:CreateFargateProfile",
                "eks:CreateNodegroup",
                "eks:Describe*",
                "eks:List*",
                "eks:Tag*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "lambdaallowfordevops",
            "Effect": "Allow",
            "Action": [
                "lambda:DeleteFunction",
                "lambda:Add*",
                "lambda:Create*",
                "lambda:Get*",
                "lambda:Invoke*",
                "lambda:List*",
                "lambda:Publish*",
                "lambda:Put*",
                "lambda:Tag*",
                "lambda:Untag*",
                "lambda:Update*"
            ],
            "Resource": "*"
        }
    ]
}